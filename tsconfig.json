{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node", "firebase"],
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}